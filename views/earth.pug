extends layout

block content
  h1= title
  - let earths = results;
  div(class="container-fluid")
    div(class="row")
      each item in earths
        - let destination = `dispatch(\"/earth/update?id=${item._id}\")`
          div(class="col-sm-2",onClick=`buy(${index})`)
            div(class="row-sm-2", class="m-1") Item #{item.continents}(#{item.continentnum}) is #{item.country}
            button.btn( class="btn-primary m-1", onclick= destination) Update
            button.btn( class="btn-primary m-1", onclick= destination) Details
            button.btn( class="btn-primary m-1", onclick= destination) Delete
  script.
    function buy((itemNo)) {
      alert(`You purchased Item ${itemNo+1}`)
    }

    function dispatch(path){
      window.location.href=path
    }